{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "github>paddyroddy/.github//renovate/default-config.json5",
    "schedule:monthly",
  ],
  "pre-commit": {
    fileMatch: [
      "precommit/general/general-hooks.yml",
      "precommit/latex/latex-hooks.yml",
      "precommit/python/python-hooks.yml",
    ],
  },
  packageRules: [
    {
      description: "Support Vx.y.z versioning",
      matchDepNames: ["cmhughes/latexindent.pl"],
      versionCompatibility: "^V(?<version>.+)$",
    },
  ],
}
